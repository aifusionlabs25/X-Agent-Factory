{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://aifusionlabs.local/schemas/co_schema.json",
    "title": "Dojo Grandmaster Change Order Schema (co.v1)",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "schema_version",
        "run_id",
        "cycle",
        "agent_id",
        "role_id",
        "pack_id",
        "level",
        "variant",
        "created_at",
        "inputs",
        "constraints",
        "objective",
        "changes",
        "tests",
        "rollback"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "co.v1"
        },
        "run_id": {
            "type": "string",
            "minLength": 4
        },
        "cycle": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "agent_id": {
            "type": "string",
            "minLength": 2
        },
        "role_id": {
            "type": "string",
            "minLength": 2
        },
        "pack_id": {
            "type": "string",
            "minLength": 2
        },
        "level": {
            "type": "string",
            "enum": [
                "L1",
                "L2",
                "L3",
                "L4",
                "L5"
            ]
        },
        "variant": {
            "type": "string",
            "enum": [
                "scratchpad",
                "A",
                "B"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "inputs": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "transcript_path",
                "score_path",
                "system_prompt_snapshot_path",
                "persona_context_snapshot_path",
                "manifest_path"
            ],
            "properties": {
                "transcript_path": {
                    "type": "string",
                    "minLength": 1
                },
                "score_path": {
                    "type": "string",
                    "minLength": 1
                },
                "system_prompt_snapshot_path": {
                    "type": "string",
                    "minLength": 1
                },
                "persona_context_snapshot_path": {
                    "type": "string",
                    "minLength": 1
                },
                "manifest_path": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "constraints": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "hard_gates",
                "banned_terms",
                "do_not_touch_blocks"
            ],
            "properties": {
                "hard_gates": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "banned_terms": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "do_not_touch_blocks": {
                    "type": "array",
                    "minItems": 0,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        },
        "objective": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "target_verdict",
                "target_score_min",
                "must_pass_gates",
                "notes"
            ],
            "properties": {
                "target_verdict": {
                    "type": "string",
                    "enum": [
                        "PASS"
                    ]
                },
                "target_score_min": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                },
                "must_pass_gates": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "notes": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "changes": {
            "type": "array",
            "minItems": 1,
            "maxItems": 3,
            "items": {
                "$ref": "#/$defs/change"
            }
        },
        "tests": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "rerun_pack",
                "rerun_level",
                "max_turns",
                "pass_if"
            ],
            "properties": {
                "rerun_pack": {
                    "type": "boolean"
                },
                "rerun_level": {
                    "type": "string",
                    "enum": [
                        "L1",
                        "L2",
                        "L3",
                        "L4",
                        "L5"
                    ]
                },
                "max_turns": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 50
                },
                "pass_if": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        },
        "rollback": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "strategy",
                "notes"
            ],
            "properties": {
                "strategy": {
                    "type": "string",
                    "enum": [
                        "discard_scratchpad",
                        "revert_patch"
                    ]
                },
                "notes": {
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    },
    "$defs": {
        "change": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "change_id",
                "target_file",
                "operation",
                "locator",
                "rationale",
                "expected_effect",
                "risk"
            ],
            "properties": {
                "change_id": {
                    "type": "string",
                    "minLength": 2
                },
                "target_file": {
                    "type": "string",
                    "enum": [
                        "system_prompt.txt",
                        "persona_context.md"
                    ]
                },
                "operation": {
                    "type": "string",
                    "enum": [
                        "replace",
                        "insert_after",
                        "insert_before",
                        "delete"
                    ]
                },
                "locator": {
                    "$ref": "#/$defs/locator"
                },
                "replacement": {
                    "type": "string"
                },
                "insertion": {
                    "type": "string"
                },
                "rationale": {
                    "type": "string",
                    "minLength": 5
                },
                "expected_effect": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "score_delta_estimate"
                    ],
                    "properties": {
                        "score_delta_estimate": {
                            "type": "integer",
                            "minimum": -100,
                            "maximum": 100
                        },
                        "reduces_flags": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            }
                        }
                    }
                },
                "risk": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "operation": {
                                "const": "replace"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "replacement"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "operation": {
                                "enum": [
                                    "insert_after",
                                    "insert_before"
                                ]
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "insertion"
                        ]
                    }
                }
            ]
        },
        "locator": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "regex",
                        "anchor_text",
                        "line_range"
                    ]
                },
                "pattern": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "line_start": {
                    "type": "integer",
                    "minimum": 1
                },
                "line_end": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "regex"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "pattern"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "anchor_text"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "text"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "line_range"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "line_start",
                            "line_end"
                        ]
                    }
                }
            ]
        }
    }
}